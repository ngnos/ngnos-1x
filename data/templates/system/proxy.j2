{% if url is ngnos_defined and port is ngnos_defined %}
{# remove http:// prefix so we can inject a username/password if present #}
export http_proxy=http://{{ username ~ ':' ~ password ~ '@' if username is ngnos_defined and password is ngnos_defined }}{{ url | replace('http://', '') }}:{{ port }}
export https_proxy=$http_proxy
export ftp_proxy=$http_proxy
{% endif %}
